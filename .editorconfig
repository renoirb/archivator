# http://editorconfig.org
# Match with prettier.config.js AND .gitattributes

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{aspx,cmd,config,cs,csproj,ps1,rels,resx,sln}]
end_of_line = clrf

