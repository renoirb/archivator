  "exports": {
    "import": "./dist/index.mjs",
    "require": "./main.cjs"
  },
  "main": "main.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "main.cjs",
    "resources",
    "docs"
