{
  "name": "url-dirname-normalizer",
  "version": "1.3.2",
  "description": "Normalize URLs to be valid filesystem paths for archiving web pages and their assets",
  "keywords": [
    "url",
    "dirname",
    "path",
    "archiving",
    "normalization"
  ],
  "homepage": "https://github.com/renoirb/archivator/blob/v3.x-dev/packages/url-dirname-normalizer",
  "repository": {
    "type": "git",
    "url": "https://github.com/renoirb/archivator.git",
    "directory": "packages/url-dirname-normalizer"
  },
  "license": "MIT",
  "author": {
    "name": "Renoir Boulanger",
    "email": "contribs@renoirboulanger.com"
  },
  "type": "module",
  "exports": {
    "import": "dist/index.mjs",
    "require": "dist/index.js"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "resources",
    "ambient.d.ts"
  ],
  "scripts": {
    "build": "use-run-all build:*",
    "build:node": "use-bili --bundle-node-modules --target node --format cjs --file-name index.js",
    "build:node-esm": "use-bili --bundle-node-modules --target node --format esm --file-name index.mjs",
    "clean": "use-rimraf .rpt2_cache dist *.*.log",
    "fix": "use-cross-env use-prettier --write  '**/*.{ts,json,md}'",
    "lint": "rush-eslint -c .eslintrc.js 'src/**/*.ts'",
    "prepublishOnly": "use-run-all clean build",
    "test": "jest --detectOpenHandles",
    "test:snapshots": "jest --detectOpenHandles -u"
  },
  "devDependencies": {
    "@babel/core": "^7.10.0",
    "@babel/plugin-transform-runtime": "^7.10.0",
    "@babel/preset-env": "^7.10.0",
    "@babel/preset-typescript": "^7.10.0",
    "@microsoft/node-library-build": "^6.4.0",
    "@renoirb/conventions-use-bili": "^1.0.2",
    "@renoirb/conventions-use-eslint": "^1.0.1",
    "@renoirb/conventions-use-jest": "^1.0.1",
    "@renoirb/conventions-use-prettier": "^1.0.1",
    "@renoirb/conventions-use-typescript-3": "^1.0.2",
    "@renoirb/tools-bundling-helpers": "^1.0.2",
    "@rushstack/eslint-config": "^0.5.4",
    "@rushstack/node-core-library": "^3.19.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^10.17.13",
    "eslint": "^6.0.0",
    "gulp": "~4.0.2",
    "jest": "^25.0.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.0"
  },
  "engines": {
    "node": ">=10"
  }
}
