{
  "name": "url-dirname-normalizer",
  "version": "1.3.2",
  "description": "Normalize URLs to be valid filesystem paths for archiving web pages and their assets",
  "keywords": [
    "url",
    "dirname",
    "path",
    "archiving",
    "normalization"
  ],
  "homepage": "https://github.com/renoirb/archivator/blob/v3.x-dev/packages/url-dirname-normalizer",
  "repository": {
    "type": "git",
    "url": "https://github.com/renoirb/archivator.git",
    "directory": "packages/url-dirname-normalizer"
  },
  "license": "MIT",
  "author": {
    "name": "Renoir Boulanger",
    "email": "contribs@renoirboulanger.com"
  },
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./main.cjs"
  },
  "main": "main.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "main.cjs",
    "resources",
    "ambient.d.ts"
  ],
  "scripts": {
    "build": "use-cross-env use-run-all clean build:*",
    "build:node-esm": "use-cross-env BROWSERSLIST='maintained node versions' use-bili -c bili.config.ts --format esm --file-name index.mjs",
    "clean": "use-cross-env use-rimraf .rpt2_cache dist *.*.log",
    "fix": "use-cross-env conventions-code-formatter prettier '**/*.{ts,json,md}' --write",
    "lint": "use-cross-env use-eslint --fix 'src/**/*.ts'",
    "prepublishOnly": "rushx build",
    "sort-package-json": "use-cross-env conventions-code-formatter sort-package-json",
    "test": "use-cross-env use-jest --detectOpenHandles",
    "test:snapshots": "use-cross-env use-jest --detectOpenHandles -u"
  },
  "dependencies": {
    "esm": "^3.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.0",
    "@babel/plugin-transform-runtime": "^7.10.0",
    "@babel/preset-env": "^7.10.0",
    "@babel/preset-typescript": "^7.10.0",
    "@babel/runtime-corejs3": "^7.10.0",
    "@microsoft/node-library-build": "^6.4.0",
    "@renoirb/conventions-code-formatter": "^1.3.0",
    "@renoirb/conventions-use-bili": "^1.3.0",
    "@renoirb/conventions-use-eslint": "^1.2.1",
    "@renoirb/conventions-use-jest": "1.1.1",
    "@renoirb/conventions-use-prettier": "^1.3.0",
    "@renoirb/conventions-use-typescript-3": "^1.2.1",
    "@renoirb/tools-bundling-helpers": "^1.2.1",
    "@rushstack/node-core-library": "^3.25.0",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.14.11",
    "core-js": "^3.8.0",
    "jest": "^25.5.0",
    "ts-jest": "^25.5.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.0"
  },
  "engines": {
    "node": ">=10"
  }
}
